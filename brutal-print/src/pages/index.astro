---
import '../styles/global.css';
import App from '../components/App';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;700&display=swap" rel="stylesheet">
		<title>‚ö° Thermal Print Studio</title>
	</head>

	<body>
		<div class="app-container">
			<!-- Header -->
			<header class="app-header glass-panel">
				<div class="flex items-center gap-3">
					<div class="text-2xl">‚ö°</div>
					<h1 class="text-xl font-bold tracking-tight neon-text">
						THERMAL PRINT STUDIO
					</h1>
				</div>
				
				<div class="flex items-center gap-2">
					<button class="btn-secondary">
						üíæ Save
					</button>
					<button class="btn-secondary">
						üì§ Export
					</button>
					<button class="btn-primary glow-hover">
						üñ®Ô∏è Print
					</button>
				</div>
			</header>

            <!-- Main Content -->
            <main class="app-main">
                <App client:load />
            </main>
		</div>

		<style>
			.app-container {
				display: flex;
				flex-direction: column;
				height: 100vh;
				width: 100vw;
				overflow: hidden;
			}

			.app-header {
				display: flex;
				justify-content: space-between;
				align-items: center;
				padding: 0.75rem 1.5rem;
				border-bottom: 1px solid var(--color-border);
				border-radius: 0;
				animation: slideIn 0.3s ease-out;
				z-index: 10;
			}

			.app-main {
				flex: 1;
				overflow: hidden;
				position: relative;
			}

			/* Global Buttons */
			:global(.btn-primary),
			:global(.btn-secondary) {
				padding: 0.5rem 1rem;
				border-radius: var(--radius-md);
				font-weight: 600;
				font-size: 0.875rem;
				border: none;
				cursor: pointer;
				transition: all var(--transition-normal);
				display: flex;
				align-items: center;
				justify-content: center;
				gap: 0.5rem;
			}

			:global(.btn-primary) {
				background: linear-gradient(135deg, var(--color-purple-dark) 0%, var(--color-blue-dark) 100%);
				color: var(--color-text-primary);
			}

			:global(.btn-primary:hover:not(:disabled)) {
				transform: translateY(-1px);
				box-shadow: var(--glow-purple);
			}

			:global(.btn-primary:disabled) {
				opacity: 0.5;
				cursor: not-allowed;
			}

			:global(.btn-secondary) {
				background: var(--color-bg-tertiary);
				color: var(--color-text-secondary);
				border: 1px solid var(--color-border);
			}

			:global(.btn-secondary:hover:not(:disabled)) {
				border-color: var(--color-purple-primary);
				color: var(--color-text-primary);
				background: rgba(167, 139, 250, 0.1);
			}

			:global(.btn-secondary:disabled) {
				opacity: 0.5;
				cursor: not-allowed;
			}
		</style>
	</body>
</html>
