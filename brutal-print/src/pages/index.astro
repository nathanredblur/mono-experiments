---
import '../styles/global.css';
import Toolbar from '../components/Toolbar.astro';
import Canvas from '../components/Canvas.astro';
import LayerPanel from '../components/LayerPanel.astro';
import PropertiesPanel from '../components/PropertiesPanel.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;700&display=swap" rel="stylesheet">
		<title>‚ö° Thermal Print Studio</title>
	</head>

	<body>
		<div class="app-container">
			<!-- Header -->
			<header class="app-header glass-panel">
				<div class="flex items-center gap-3">
					<div class="text-2xl">‚ö°</div>
					<h1 class="text-xl font-bold tracking-tight neon-text">
						THERMAL PRINT STUDIO
					</h1>
				</div>
				
				<div class="flex items-center gap-2">
					<button class="btn-secondary">
						üíæ Save
					</button>
					<button class="btn-secondary">
						üì§ Export
					</button>
					<button class="btn-primary glow-hover">
						üñ®Ô∏è Print
					</button>
				</div>
			</header>

			<!-- Main Content -->
			<main class="app-main">
				<!-- Toolbar -->
				<aside class="toolbar-panel glass-panel">
					<Toolbar />
				</aside>

				<!-- Canvas Area -->
				<section class="canvas-area">
					<Canvas />
				</section>

				<!-- Right Panels -->
				<aside class="right-panels">
					<div class="layers-panel glass-panel">
						<LayerPanel />
					</div>
					<div class="properties-panel glass-panel">
						<PropertiesPanel />
					</div>
				</aside>
			</main>
		</div>

		<style>
			.app-container {
				display: flex;
				flex-direction: column;
				height: 100vh;
				width: 100vw;
				overflow: hidden;
			}

			.app-header {
				display: flex;
				justify-content: space-between;
				align-items: center;
				padding: 0.75rem 1.5rem;
				border-bottom: 1px solid var(--color-border);
				border-radius: 0;
				animation: slideIn 0.3s ease-out;
			}

			.app-main {
				display: grid;
				grid-template-columns: 80px 1fr 320px;
				gap: 0;
				flex: 1;
				overflow: hidden;
			}

			.toolbar-panel {
				border-right: 1px solid var(--color-border);
				border-radius: 0;
				display: flex;
				flex-direction: column;
				padding: 1rem 0.5rem;
				animation: slideIn 0.4s ease-out;
			}

			.canvas-area {
				background: var(--color-bg-secondary);
				position: relative;
				overflow: hidden;
			}

			.right-panels {
				display: flex;
				flex-direction: column;
				gap: 0;
				border-left: 1px solid var(--color-border);
			}

			.layers-panel {
				flex: 1;
				border-radius: 0;
				border-bottom: 1px solid var(--color-border);
				overflow: hidden;
				display: flex;
				flex-direction: column;
				animation: slideIn 0.5s ease-out;
			}

			.properties-panel {
				height: 280px;
				border-radius: 0;
				overflow-y: auto;
				animation: slideIn 0.6s ease-out;
			}

			/* Buttons */
			.btn-primary,
			.btn-secondary {
				padding: 0.5rem 1rem;
				border-radius: var(--radius-md);
				font-weight: 600;
				font-size: 0.875rem;
				border: none;
				cursor: pointer;
				transition: all var(--transition-normal);
				display: flex;
				align-items: center;
				gap: 0.5rem;
			}

			.btn-primary {
				background: linear-gradient(135deg, var(--color-purple-dark) 0%, var(--color-blue-dark) 100%);
				color: var(--color-text-primary);
			}

			.btn-primary:hover {
				transform: translateY(-1px);
			}

			.btn-secondary {
				background: var(--color-bg-tertiary);
				color: var(--color-text-secondary);
				border: 1px solid var(--color-border);
			}

			.btn-secondary:hover {
				border-color: var(--color-purple-primary);
				color: var(--color-text-primary);
				background: rgba(167, 139, 250, 0.1);
			}
		</style>
	</body>
</html>
