---
// LayerPanel component - Layer management
---

<div class="layer-panel">
	<div class="panel-header">
		<h3 class="panel-title">LAYERS</h3>
		<button class="icon-btn" title="Add Layer" id="add-layer">
			<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
				<line x1="12" y1="5" x2="12" y2="19"/>
				<line x1="5" y1="12" x2="19" y2="12"/>
			</svg>
		</button>
	</div>

	<div class="layer-list" id="layer-list">
		<!-- Layer Item 3 -->
		<div class="layer-item" data-layer-id="3">
			<div class="layer-drag-handle">
				<svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor">
					<circle cx="9" cy="5" r="1"/>
					<circle cx="15" cy="5" r="1"/>
					<circle cx="9" cy="12" r="1"/>
					<circle cx="15" cy="12" r="1"/>
					<circle cx="9" cy="19" r="1"/>
					<circle cx="15" cy="19" r="1"/>
				</svg>
			</div>

			<div class="layer-preview">
				<svg width="32" height="32" viewBox="0 0 32 32">
					<rect width="32" height="32" fill="#e2e8f0"/>
					<text x="16" y="20" text-anchor="middle" font-size="14" fill="#334155">T</text>
				</svg>
			</div>

			<div class="layer-info">
				<input type="text" class="layer-name" value="Text Layer" />
				<span class="layer-type">Text</span>
			</div>

			<div class="layer-actions">
				<button class="layer-action" title="Toggle Visibility" data-action="toggle-visibility">
					<svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
						<circle cx="12" cy="12" r="3"/>
					</svg>
				</button>
				<button class="layer-action" title="Lock Layer" data-action="toggle-lock">
					<svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
						<path d="M7 11V7a5 5 0 0 1 10 0v4"/>
					</svg>
				</button>
			</div>
		</div>

		<!-- Layer Item 2 -->
		<div class="layer-item" data-layer-id="2">
			<div class="layer-drag-handle">
				<svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor">
					<circle cx="9" cy="5" r="1"/>
					<circle cx="15" cy="5" r="1"/>
					<circle cx="9" cy="12" r="1"/>
					<circle cx="15" cy="12" r="1"/>
					<circle cx="9" cy="19" r="1"/>
					<circle cx="15" cy="19" r="1"/>
				</svg>
			</div>

			<div class="layer-preview">
				<svg width="32" height="32" viewBox="0 0 32 32">
					<rect width="32" height="32" fill="#cbd5e1"/>
					<rect x="8" y="8" width="16" height="16" fill="#475569"/>
				</svg>
			</div>

			<div class="layer-info">
				<input type="text" class="layer-name" value="Shape Layer" />
				<span class="layer-type">Shape</span>
			</div>

			<div class="layer-actions">
				<button class="layer-action active" title="Toggle Visibility" data-action="toggle-visibility">
					<svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
						<circle cx="12" cy="12" r="3"/>
					</svg>
				</button>
				<button class="layer-action" title="Lock Layer" data-action="toggle-lock">
					<svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
						<path d="M7 11V7a5 5 0 0 1 10 0v4"/>
					</svg>
				</button>
			</div>
		</div>

		<!-- Layer Item 1 (Background) -->
		<div class="layer-item active" data-layer-id="1">
			<div class="layer-drag-handle">
				<svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor">
					<circle cx="9" cy="5" r="1"/>
					<circle cx="15" cy="5" r="1"/>
					<circle cx="9" cy="12" r="1"/>
					<circle cx="15" cy="12" r="1"/>
					<circle cx="9" cy="19" r="1"/>
					<circle cx="15" cy="19" r="1"/>
				</svg>
			</div>

			<div class="layer-preview">
				<svg width="32" height="32" viewBox="0 0 32 32">
					<rect width="32" height="32" fill="white"/>
				</svg>
			</div>

			<div class="layer-info">
				<input type="text" class="layer-name" value="Background" />
				<span class="layer-type">Background</span>
			</div>

			<div class="layer-actions">
				<button class="layer-action active" title="Toggle Visibility" data-action="toggle-visibility">
					<svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
						<circle cx="12" cy="12" r="3"/>
					</svg>
				</button>
				<button class="layer-action active" title="Lock Layer" data-action="toggle-lock">
					<svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
						<path d="M7 11V7a5 5 0 0 1 10 0v4"/>
					</svg>
				</button>
			</div>
		</div>
	</div>
</div>

<script>
	// Layer panel interactions
	const layerList = document.getElementById('layer-list');
	const addLayerBtn = document.getElementById('add-layer');
	let layerCounter = 4;

	// Layer selection
	layerList?.addEventListener('click', (e) => {
		const target = e.target as HTMLElement;
		const layerItem = target.closest('.layer-item');
		
		if (layerItem && !target.closest('.layer-action')) {
			// Deselect all layers
			document.querySelectorAll('.layer-item').forEach(item => {
				item.classList.remove('active');
			});
			// Select clicked layer
			layerItem.classList.add('active');
		}
	});

	// Layer actions
	layerList?.addEventListener('click', (e) => {
		const target = e.target as HTMLElement;
		const actionBtn = target.closest('.layer-action') as HTMLElement;
		
		if (actionBtn) {
			e.stopPropagation();
			const action = actionBtn.dataset.action;
			
			if (action === 'toggle-visibility' || action === 'toggle-lock') {
				actionBtn.classList.toggle('active');
			}
		}
	});

	// Add new layer
	addLayerBtn?.addEventListener('click', () => {
		const newLayer = document.createElement('div');
		newLayer.className = 'layer-item';
		newLayer.dataset.layerId = String(layerCounter);
		newLayer.innerHTML = `
			<div class="layer-drag-handle">
				<svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor">
					<circle cx="9" cy="5" r="1"/>
					<circle cx="15" cy="5" r="1"/>
					<circle cx="9" cy="12" r="1"/>
					<circle cx="15" cy="12" r="1"/>
					<circle cx="9" cy="19" r="1"/>
					<circle cx="15" cy="19" r="1"/>
				</svg>
			</div>
			<div class="layer-preview">
				<svg width="32" height="32" viewBox="0 0 32 32">
					<rect width="32" height="32" fill="#e2e8f0"/>
				</svg>
			</div>
			<div class="layer-info">
				<input type="text" class="layer-name" value="Layer ${layerCounter}" />
				<span class="layer-type">Empty</span>
			</div>
			<div class="layer-actions">
				<button class="layer-action active" title="Toggle Visibility" data-action="toggle-visibility">
					<svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
						<circle cx="12" cy="12" r="3"/>
					</svg>
				</button>
				<button class="layer-action" title="Lock Layer" data-action="toggle-lock">
					<svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
						<path d="M7 11V7a5 5 0 0 1 10 0v4"/>
					</svg>
				</button>
			</div>
		`;
		
		layerList?.insertBefore(newLayer, layerList.firstChild);
		layerCounter++;
		
		// Animate new layer
		newLayer.style.animation = 'slideIn 0.3s ease-out';
	});

	// Drag and drop (basic implementation)
	let draggedElement: HTMLElement | null = null;

	layerList?.addEventListener('dragstart', (e) => {
		const target = e.target as HTMLElement;
		if (target.closest('.layer-drag-handle')) {
			const layerItem = target.closest('.layer-item') as HTMLElement;
			draggedElement = layerItem;
			layerItem.style.opacity = '0.5';
		}
	});

	layerList?.addEventListener('dragend', (e) => {
		if (draggedElement) {
			draggedElement.style.opacity = '1';
			draggedElement = null;
		}
	});

	layerList?.addEventListener('dragover', (e) => {
		e.preventDefault();
		const target = e.target as HTMLElement;
		const layerItem = target.closest('.layer-item');
		
		if (layerItem && draggedElement && layerItem !== draggedElement) {
			const rect = layerItem.getBoundingClientRect();
			const midpoint = rect.top + rect.height / 2;
			
			if (e.clientY < midpoint) {
				layerList?.insertBefore(draggedElement, layerItem);
			} else {
				layerList?.insertBefore(draggedElement, layerItem.nextSibling);
			}
		}
	});

	// Enable dragging on layer items
	document.querySelectorAll('.layer-item').forEach(item => {
		item.setAttribute('draggable', 'true');
	});
</script>

<style>
	.layer-panel {
		display: flex;
		flex-direction: column;
		height: 100%;
		padding: 1rem;
	}

	.panel-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 1rem;
	}

	.panel-title {
		font-size: 0.75rem;
		font-weight: 700;
		letter-spacing: 0.1em;
		color: var(--color-text-secondary);
	}

	.icon-btn {
		width: 24px;
		height: 24px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: var(--color-bg-tertiary);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-sm);
		color: var(--color-text-secondary);
		cursor: pointer;
		transition: all var(--transition-normal);
	}

	.icon-btn:hover {
		border-color: var(--color-purple-primary);
		color: var(--color-purple-primary);
	}

	.layer-list {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		flex: 1;
		overflow-y: auto;
		padding-right: 0.25rem;
	}

	.layer-item {
		display: grid;
		grid-template-columns: 16px 32px 1fr auto;
		gap: 0.5rem;
		align-items: center;
		padding: 0.5rem;
		background: var(--color-bg-tertiary);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-md);
		cursor: pointer;
		transition: all var(--transition-normal);
	}

	.layer-item:hover {
		background: rgba(167, 139, 250, 0.05);
		border-color: var(--color-border-light);
	}

	.layer-item.active {
		border-color: var(--color-purple-primary);
		background: rgba(167, 139, 250, 0.1);
	}

	.layer-drag-handle {
		color: var(--color-text-muted);
		cursor: grab;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.layer-drag-handle:active {
		cursor: grabbing;
	}

	.layer-preview {
		width: 32px;
		height: 32px;
		border-radius: var(--radius-sm);
		overflow: hidden;
		border: 1px solid var(--color-border);
	}

	.layer-info {
		display: flex;
		flex-direction: column;
		gap: 0.125rem;
		min-width: 0;
	}

	.layer-name {
		background: transparent;
		border: none;
		color: var(--color-text-primary);
		font-size: 0.875rem;
		font-weight: 500;
		padding: 0;
		outline: none;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
	}

	.layer-name:focus {
		background: rgba(0, 0, 0, 0.2);
		padding: 0.125rem 0.25rem;
		border-radius: var(--radius-sm);
	}

	.layer-type {
		font-size: 0.625rem;
		color: var(--color-text-muted);
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.layer-actions {
		display: flex;
		gap: 0.25rem;
	}

	.layer-action {
		width: 24px;
		height: 24px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: transparent;
		border: 1px solid transparent;
		border-radius: var(--radius-sm);
		color: var(--color-text-muted);
		cursor: pointer;
		transition: all var(--transition-fast);
	}

	.layer-action:hover {
		color: var(--color-text-primary);
		background: rgba(255, 255, 255, 0.05);
	}

	.layer-action.active {
		color: var(--color-purple-primary);
	}
</style>

